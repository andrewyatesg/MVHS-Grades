<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="6dip">
    <TextView
            android:id="@+id/title"
            android:text="Title"
            android:fontFamily="sans-serif-condensed"
            android:textSize="10pt"
            android:singleLine="false"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/category"
            android:text="Test Category"
            android:textSize="6pt"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@id/title" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:id="@+id/score"
            android:textSize="9pt"
            android:fontFamily="sans-serif-condensed"
            android:text="10 / 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView
            android:id="@+id/percentage"
            android:textSize="7pt"
            android:fontFamily="sans-serif-condensed"
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score" android:layout_alignRight="@id/score"
            android:layout_alignEnd="@id/score"/>
</RelativeLayout>